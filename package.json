{
  "name": "delta.chat",
  "version": "1.0.0",
  "description": "delta.chat next desktop",
  "main": "src/electron.js",
  "scripts": {
    "react-start": "NODE_ENV=development npx webpack-dev-server --config webpack.dev.js",
    "react-build": "NODE_ENV=production npx webpack --config webpack.prod.js",
    "electron-build": "electron-builder -mwl",
    "clean-build": "rm -rf build/ .cache dist/",
    "build": "npm run clean-build && npm run react-build && npm run electron-build",
    "start": "concurrently \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:3000 && electron . \"",
    "test-bundle": "bundlesize"
  },
  "bundlesize": [
    {
      "path": "./build/main*.js",
      "maxSize": "250 kB"
    },
    {
      "path": "./build/*.css",
      "maxSize": "100 kB"
    }
  ],
  "keywords": [],
  "author": "dignifiedquire <me@dignifiedquire.com>",
  "license": "MIT",
  "dependencies": {
    "draft-js": "^0.11.4",
    "draft-js-emoji-mart-plugin": "0.0.6",
    "draft-js-plugins-editor": "^3.0.0",
    "electron-is-dev": "1.1.0",
    "emoji-mart": "^2.11.2",
    "lodash": "^4.17.15",
    "modern-css-reset": "^1.1.0",
    "moment": "^2.24.0",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-files": "^2.4.8",
    "react-icons-kit": "^1.3.1",
    "react-modal": "^3.11.1",
    "react-redux": "^7.0.3",
    "react-text-format": "^2.0.28",
    "react-titlebar-osx": "^1.1.0",
    "react-virtualized": "^9.21.2",
    "react-window-size-listener": "^1.5.4",
    "reconnecting-websocket": "^4.4.0",
    "redux": "^4.0.1",
    "url": "^0.11.0"
  },
  "build": {
    "appId": "com.chat.delta",
    "files": [
      "src/electron.js",
      "src/assets/*",
      "build/**/*"
    ],
    "mac": {
      "target": "dmg",
      "icon": "src/assets/logo.png"
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/logo.png"
    },
    "linux": {
      "target": "deb",
      "icon": "src/assets/logo.png",
      "category": "Development"
    }
  },
  "homepage": "./",
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
    "@babel/plugin-transform-modules-commonjs": "^7.8.3",
    "@babel/plugin-transform-react-jsx": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "@hot-loader/react-dom": "^16.11.0",
    "babel-loader": "^8.0.6",
    "babel-minify-webpack-plugin": "^0.3.1",
    "bundlesize": "^0.18.0",
    "concurrently": "^5.0.2",
    "cross-env": "7.0.0",
    "css-loader": "^3.4.2",
    "electron": "8.0.0",
    "electron-builder": "22.3.2",
    "html-webpack-plugin": "^4.0.0-beta.11",
    "less": "^3.10.3",
    "less-loader": "^5.0.0",
    "mini-css-extract-plugin": "^0.9.0",
    "prettier": "^1.19.1",
    "prettier-loader": "^3.3.0",
    "react-devtools-electron": "^4.4.0",
    "react-hot-loader": "^4.12.19",
    "style-loader": "^1.1.3",
    "wait-on": "4.0.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.3",
    "webpack-merge": "^4.2.2"
  },
  "prettier": {
    "excludeFiles": [
      "build/*.js"
    ]
  },
  "browserslist": [
    "last 1 electron version"
  ]
}
