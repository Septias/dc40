{
  "name": "delta.chat",
  "version": "1.0.0",
  "description": "delta.chat next desktop",
  "main": "src/electron.js",
  "scripts": {
    "react-start": "parcel -p 3000 index.html --out-dir build",
    "react-build": "parcel build index.html --out-dir build --public-url ./",
    "electron-build": "electron-builder -mwl",
    "clean-build": "rm -rf build/ .cache dist/",
    "build": "yarn clean-build && yarn react-build && yarn electron-build",
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron . \"",
    "test-bundle": "bundlesize"
  },
  "bundlesize": [
    {
      "path": "./build/src.*.js",
      "maxSize": "250 kB"
    },
    {
      "path": "./build/src.*.css",
      "maxSize": "100 kB"
    }
  ],
  "keywords": [
    "boskysoft",
    "electron",
    "react",
    "parcel",
    "electron-react-parcel",
    "electron react parcel"
  ],
  "author": "dignifiedquire <me@dignifiedquire.com>",
  "license": "MIT",
  "dependencies": {
    "electron-is-dev": "1.1.0",
    "modern-css-reset": "^1.1.0",
    "moment": "^2.24.0",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-files": "^2.4.8",
    "react-icons-kit": "^1.3.1",
    "react-modal": "^3.11.1",
    "react-redux": "^7.0.3",
    "react-virtualized": "^9.21.2",
    "react-window-size-listener": "^1.5.4",
    "reconnecting-websocket": "^4.4.0",
    "redux": "^4.0.1"
  },
  "build": {
    "appId": "com.chat.delta",
    "files": [
      "src/electron.js",
      "src/assets/*",
      "build/**/*"
    ],
    "mac": {
      "target": "dmg",
      "icon": "src/assets/logo.png"
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/logo.png"
    },
    "linux": {
      "target": "deb",
      "icon": "src/assets/logo.png",
      "category": "Development"
    }
  },
  "homepage": "./",
  "devDependencies": {
    "babel-core": "6.26.3",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-plugin-transform-react-jsx": "6.24.1",
    "babel-preset-env": "1.7.0",
    "babel-preset-react": "6.24.1",
    "bundlesize": "^0.18.0",
    "concurrently": "^5.0.2",
    "cross-env": "7.0.0",
    "electron": "8.0.0",
    "electron-builder": "22.3.2",
    "less": "^3.10.3",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-prettier": "^0.2.1",
    "react-devtools-electron": "^4.4.0",
    "wait-on": "4.0.0"
  }
}
