{
  "name": "delta.chat",
  "version": "1.0.0",
  "description": "delta.chat next desktop",
  "main": "src/electron.js",
  "scripts": {
    "webpack-start": "NODE_ENV=development npx webpack-dev-server --config webpack.dev.js",
    "webpack-build": "NODE_ENV=production npx webpack --config webpack.prod.js",
    "electron-build": "electron-builder -mwl",
    "clean-build": "rm -rf build/ .cache dist/",
    "build": "npm run clean-build && npm run webpack-build && npm run electron-build",
    "start": "concurrently \"cross-env BROWSER=none npm run webpack-start\" \"wait-on http://localhost:3000 && electron . \"",
    "test-bundle": "bundlesize"
  },
  "bundlesize": [
    {
      "path": "./build/main*.js",
      "maxSize": "250 kB"
    },
    {
      "path": "./build/*.css",
      "maxSize": "100 kB"
    }
  ],
  "keywords": [],
  "author": "dignifiedquire <me@dignifiedquire.com>",
  "license": "MIT",
  "dependencies": {
    "electron-is-dev": "^1.2.0",
    "modern-css-reset": "^1.1.0"
  },
  "build": {
    "appId": "com.chat.delta",
    "files": [
      "src/electron.js",
      "src/assets/*",
      "build/**/*"
    ],
    "mac": {
      "target": "dmg",
      "icon": "src/assets/logo.png"
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/logo.png"
    },
    "linux": {
      "target": "deb",
      "icon": "src/assets/logo.png",
      "category": "Development"
    }
  },
  "homepage": "./",
  "devDependencies": {
    "@wasm-tool/wasm-pack-plugin": "^1.3.1",
    "bundlesize": "^0.18.0",
    "concurrently": "^5.0.2",
    "cross-env": "7.0.0",
    "css-loader": "^3.4.2",
    "electron": "8.0.0",
    "electron-builder": "22.3.2",
    "html-webpack-plugin": "^4.0.0-beta.11",
    "less": "^3.10.3",
    "less-loader": "^5.0.0",
    "mini-css-extract-plugin": "^0.9.0",
    "prettier": "^1.19.1",
    "prettier-loader": "^3.3.0",
    "style-loader": "^1.1.3",
    "wait-on": "4.0.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.3",
    "webpack-merge": "^4.2.2"
  },
  "prettier": {
    "excludeFiles": [
      "build/*.js"
    ]
  },
  "browserslist": [
    "last 1 electron version"
  ]
}
